doctype 5
html(lang="en")
	head
		title Believers and Achievers
		link(rel='stylesheet', href='/stylesheets/core.css')
	body
		div.wrapper.shadow
			div.header
				include header
			ul.main-nav
				li
					a(href="/login/") Login
				li
					a(href="/forgot-password/") Forgot Password?

			div.content.clearfix
				form.login(action="/submit-password-change/", method="post")
					input(type="hidden", name="email", value=email)
					input(type="hidden", name="flag", value=flag)
					label
						div.label Password:
						input(type="password", name="password")
					label
						div.label Confirm:
						input(type="password", name="password_confirm")

					input.submit(type="submit",value="Change Password", name="authenticate")
