
{{#if errorFetchingData}}

<section class="post-fluid">
	<div class="container-fluid">
		<div class="row laread-404">
			<div class="icon-box">
				<span class="icon-404"><i class="fa fa-unlink"></i></span>
			</div>
			<div class="info-404">
				<h2>That wasn't supposed to happen.</h2>
				<p class="text-404">Looks like something's broken with the blog right now. Please bear with us, as I'm sure alarms are going off somewhere.</p>
			</div>
		</div>
	</div>
</section>

{{else}}

<div class="container">
	<div class="head-text">
		<h1 class="head-text-highlight">Blog</h1>
</div>

<form id="form-email-signup">
	<input type="hidden" name="u" value="8d73b87c7a7f60671fa0a9f4a">
    <input type="hidden" name="id" value="ea655a77fa">
	<div class="email-signup">
		<p>If you like the site and the content, subscribe by RSS or email.</p>
		<div class="form-group">
			<input type="text" name="MERGE0" class="form-control" placeholder="Enter your email here..." autocapitalize="off" autocomplete="off">
			<button type="submit" class="btn btn-link"><i class="fa fa-paper-plane"></i></button>
		</div>
	</div>
</form>

<div class="container">
	<div class="row">
		<div class="masonry isotopeContainer">

			{{#each stories}}
			<div class="col-md-4 masonry-row col-sm-6" data-url="{{preview.url}}">
				{{#if preview.image}}
				<a href="{{preview.url}}"><img src="{{preview.image}}" alt=""></a>
				{{!-- <img src="{{preview.image}}" alt=""> --}}
				{{else}}
				<a href="{{preview.url}}" class="medium-date">
					<div class="medium-date-day">{{view.date}}</div>
					<div class="medium-date-month">{{view.month}}, {{view.year}}</div>
				</a>
				{{/if}}
				
				<div class="masonry-content">
					<a href="{{preview.url}}">{{name}}</a>
					<p class="spot ellipsis-readmore">{{preview.sanitized}} <a href="{{preview.url}}" class="more">Â»</a></p>
					<div class="links">
						<span>{{view.fulldate}}</span>
					</div>
				</div>
			</div>
			{{/each}}

		</div>
	</div>
</div>

{{/if}}

