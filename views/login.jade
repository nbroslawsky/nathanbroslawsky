doctype 5
html(lang="en")
	head
		title Believers and Achievers
		link(rel='stylesheet', href='/stylesheets/core.css')
	body
		div.wrapper.shadow
			div.header
				include header
			ul.main-nav
				li
					a(href="/login/") Login

			div.content.clearfix
				form(action="/authenticate/", method="post").login
					input(type="hidden", name="go", value=redirectParam)
					label
						div.label Email:
						input(type="text", name="email")
					label
						div.label Password:
						input(type="password", name="password")

					input.submit(type="submit",value="Log In", name="authenticate")